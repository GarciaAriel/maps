        <ListView
            android:id="@+id/activity_main_menu_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#738E91"
            android:textColor="#FFFFFF"
            android:cacheColorHint="#00000000"  >

        </ListView>
                
		 
    </LinearLayout>
    
    <!-- This holds our content      ..........................-->

    <LinearLayout
        
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- This acts as Actionbar -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/activity_main_content_button_menu"
                android:layout_width="46dp"
                android:layout_height="43dp"
                android:background="@drawable/icon_menu"
                android:onClick="toggleMenu"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/activity_main_content_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.66"
                android:gravity="center"
                android:text="@string/app_name"
                android:visibility="gone" />

            <Button
                android:id="@+id/_ini_ruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.94"
                android:onClick="iniciar_recorrido"
                android:text="Iniciar el Viaje"
                android:visibility="invisible" />

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="0.05"
                android:background="@drawable/check"
                android:checked="false"
                android:gravity="right"
                android:onClick="methodChangeMode"
                android:text=""
                android:textColorLink="@android:color/black"
                android:textOff=" "
                android:textOn=" " />

        </LinearLayout>

        <!-- This is where fragment will show up -->

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />
    </LinearLayout>
    
    <!-- This holds our menu right-->

</com.entropy.slidingmenu2.layout.MainLayout>